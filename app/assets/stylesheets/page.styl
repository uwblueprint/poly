*
  box-sizing border-box
  font-family $sans

html
  width 100%

  body
    width inherit
    margin 0
    display inline-block
    background $whiteHover
    background #FFEDE6

    .container
      display inline-block
      width 100%
      padding-bottom 90px

a
  color $darkBlue

  &:visited
    background #fafafa
    color lighten($darkBlue, 20%)

  &:active
    color $darkBlue

p.version
  margin 0
  padding 10px 20px
  opacity .3
  float left

.brand
  $sans
  opacity .2
  position fixed
  right 0
  bottom 0
  padding 35px 60px
  margin 0
  font-size 16px
  transition opacity $time ease-in-out

  &:hover
    opacity .3

  img
    float left
    height 30px
    margin-right 5px
    margin-top -10px

.flash_notice, .flash_alert
  z-index 10
  font-weight 100
  text-align center
  padding 22px 41px
  border-radius $radius
  position absolute
  right 50px
  bottom 40px
  boxShadow()

.flash_notice
  border 1px solid #575f6b
  background #5c6470
  color #c7e0ff

.flash_alert
  color $white
  border 1px solid #ff4c4c
  background #ff5f66

.backgroundElement
  position fixed
  z-index 0
  width 100%
  height 210px
  background #BFE7EC
  border-color #BFE7EC
  // border-bottom 3px solid #99a1b7
  left 0
  top 60px

  &::after
    background-color transparent
    height 4vh
    min-height 84px
    width 100%
    content ""
    position absolute
    bottom -83px
    left 0
    border-left 100vw solid
    border-left-color inherit
    border-bottom 64px solid transparent

.requiredField
  color #e00038

.emptySearch
  text-align center
  background transparent
  border-bottom none
  display block
  margin 140px auto
  color darken($grey,30%)
  position relative
  font-weight 100