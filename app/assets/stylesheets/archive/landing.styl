.archive-page {
  width: 100%;
  position: relative;
}

.archive-background {
  position: absolute;
  left: 0;
  right: 0;

  .archive-bg-container {
    position: relative;
  }

  img {
    position: absolute;
    width: 100%;
    top: 0px;
    left: 0px;
    right: 0px;
  }

  .archive-title {
    position: absolute;
    margin: 0;
    top: 110px;
    width: 100%;

    color: #fff;
    font-size: 42px;
    font-weight: 700;
    text-shadow: 0px 2px 4px rgba(82,70,70,.5);
    text-align: center;
  }

  .archive-subtitle {
    position: absolute;
    width: 46%;
    top: 175px;
    left: 27%;

    color: #fff;
    font-size: 20px;
    font-weight: 300;
    text-shadow: 0px 2px 4px rgba(82,70,70,.5);
    text-align: center;
  }
}

.archive-video-container {
  position: relative;
  top: 280px;

  display: block;
  margin: 0 auto 80px auto;
  padding: 16px;
  width: 90%;
  height: 1000px;

  background-color: white;
  box-shadow: 0px 4px 4px rgba(0,0,0,.2);
}
